<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookTicketsFragment">

    <TextView
        android:id="@+id/app_name_view_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="50sp"
        android:textColor="?attr/colorSecondary"
        android:fontFamily="monospace"
        android:textStyle="bold|italic"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/departure_spinner_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <Spinner
        android:id="@+id/select_departure_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/destination_spinner_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <Spinner
        android:id="@+id/select_destination_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_spinner_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>
    <Spinner
        android:id="@+id/select_outbound_date_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_spinner_label"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <Spinner
        android:id="@+id/select_outbound_time_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>